{% extends "@UmbrellaAdmin/Layout/layout.html.twig" %}

{% block content %}
    <form enctype="multipart/form-data" method="POST" data-mount="Form">

        <div class="d-flex mb-3">
            <span class="ml-auto"></span>
            <button type="submit" class="btn btn-primary">
                <i class="mdi mdi-check"></i> {{ 'action.save' | trans }}
            </button>
        </div>

        {{ form_errors(form) }}

        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Basic Types</h4>
                {{ form_widget(form._basic) }}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Date Types</h4>
                {{ form_widget(form._date) }}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Select2 / Tag Types</h4>
                {{ form_widget(form._select2) }}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Collection Types</h4>
                {{ form_widget(form._collection) }}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Other Types</h4>
                {{ form_widget(form._other) }}
            </div>
        </div>

        {{ form_rest(form) }}

    </form>
{% endblock %}
